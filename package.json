    "mongodb": "^7.0.0",
    "mongoose": "^8.20.4",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.58.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
